{
  "name": "bdc-backend",
  "version": "1.0.2",
  "description": "BDC Backend Service",
  "main": "src/index.ts",
  "scripts": {
    "start": "NODE_ENV=production ts-node src/index.ts",
    "dev": "NODE_ENV=development ts-node src/index.ts",
    "build": "tsc",
    "test": "jest",
    "init:schema": "bash ./clis/init_schema.sh",
    "init:schema:dev": "export $(cat .env.development | grep -v '^#' | xargs) && yarn init:schema",
    "mock:data": "export $(cat .env.development | grep -v '^#' | xargs) && bash ./clis/load_mock_data.sh"
  },
  "dependencies": {
    "express": "^4.18.2",
    "typeorm": "^0.3.17",
    "pg": "^8.11.3",
    "graphql": "^16.8.1",
    "apollo-server-express": "^3.13.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/cors": "^2.8.17",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11"
  }
}
